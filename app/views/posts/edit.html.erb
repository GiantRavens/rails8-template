<% content_for :title, "editing: #{@post.title} | #{app_name}" %>
<h1 class="hd1-hero">
  <%= @post.title %>
</h1>
<%= render "form", post: @post %>

<div class="border-t border-gray-200 mt-4 mb-2"></div>
<div class="action-bar py-0 my-4">
  <%= link_to "Edit this post", edit_post_path(@post), class: "action-link" %>
  <%= link_to "Back to posts", posts_path, class: "action-link" %>
  <%= button_to "Destroy this post", @post, method: :delete, form_class: "sm:inline-block mt-2 sm:mt-0 sm:ml-2", class: "action-link hover:text-red-600", data: { turbo_confirm: "Are you sure?" } %>
</div>

<%= link_to "Show this post", @post, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
<%= link_to "Back to posts", posts_path, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>