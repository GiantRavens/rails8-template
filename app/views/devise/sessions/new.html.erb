<% page_title "Sign In" %>
<% meta_description "Sign in to your #{app_name} account to access your dashboard, manage your profile, and use all features." %>
<div class="max-w-lg mx-auto my-8">
  <h2 class="hd1-hero text-center">Log in</h2>
  <div class="form-container">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-section" }) do |f| %>
      <div class="form-field-group">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-field" %>
      </div>
      <div class="form-field-group">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-field" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="form-field-group flex items-center">
          <%= f.check_box :remember_me, class: "h-4 w-4 text-green-600 focus:ring-green-500 border-gray-300 rounded" %>
          <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-700" %>
        </div>
      <% end %>
      <div class="mt-8 mb-2">
        <%= f.submit "Log in", class: "submit-button w-full" %>
      </div>
    <% end %>
  </div>
  <%= render "devise/shared/links" %>
</div>
