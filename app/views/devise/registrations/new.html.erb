<div class="max-w-md mx-auto my-8">
  <h2 class="hd1-hero text-center">Sign up</h2>

  <div class="form-container">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-section" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-field-group">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-field" %>
      </div>

      <div class="form-field-group">
        <%= f.label :first_name, class: "form-label" %>
        <%= f.text_field :first_name, class: "form-field" %>
      </div>

      <div class="form-field-group">
        <%= f.label :last_name, class: "form-label" %>
        <%= f.text_field :last_name, class: "form-field" %>
      </div>

      <div class="form-field-group">
        <%= f.label :preferred_name, "Preferred name (optional)", class: "form-label" %>
        <%= f.text_field :preferred_name, class: "form-field" %>
        <p class="form-hint">How you'd like to be addressed</p>
      </div>

      <div class="form-field-group">
        <%= f.label :bio, "Bio (optional)", class: "form-label" %>
        <%= f.text_area :bio, rows: 4, class: "form-field" %>
        <p class="form-hint">Tell us a little about yourself</p>
      </div>

      <div class="form-field-group">
        <%= f.label :password, class: "form-label" %>
        <% if @minimum_password_length %>
        <span class="form-hint">(<%= @minimum_password_length %> characters minimum)</span>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-field" %>
      </div>

      <div class="form-field-group">
        <%= f.label :password_confirmation, class: "form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-field" %>
      </div>

      <div class="form-field-group">
        <%= f.submit "Sign up", class: "submit-button" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
