<% page_title "Edit Account" %>
<% meta_description "Update your #{app_name} account settings, change your password, or manage your profile information." %>
<div class="max-w-2xl mx-auto my-8">
  <h2 class="hd1-hero text-center">Edit Profile</h2>
  <div class="form-container">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-section" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-field-group">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-field" %>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p class="form-hint">Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>
      </div>
      <div class="form-field-group">
        <%= f.label :first_name, class: "form-label" %>
        <%= f.text_field :first_name, class: "form-field" %>
      </div>
      <div class="form-field-group">
        <%= f.label :last_name, class: "form-label" %>
        <%= f.text_field :last_name, class: "form-field" %>
      </div>
      <div class="form-field-group">
        <%= f.label :preferred_name, "Preferred name (optional)", class: "form-label" %>
        <%= f.text_field :preferred_name, class: "form-field" %>
        <p class="form-hint">How you'd like to be addressed</p>
      </div>
      <div class="form-field-group">
        <%= f.label :bio, "Bio (optional)", class: "form-label" %>
        <%= f.text_area :bio, rows: 4, class: "form-field" %>
        <p class="form-hint">Tell us a little about yourself</p>
      </div>
      <div class="form-field-group">
        <%= f.label :password, "New password (leave blank if you don't want to change it)", class: "form-label" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-field" %>
        <% if @minimum_password_length %>
          <p class="form-hint"><%= @minimum_password_length %> characters minimum</p>
        <% end %>
      </div>
      <div class="form-field-group">
        <%= f.label :password_confirmation, "Confirm new password", class: "form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-field" %>
      </div>
      <div class="form-field-group">
        <%= f.label :current_password, "Current password (needed to confirm changes)", class: "form-label" %>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-field" %>
      </div>
      <div class="form-field-group">
        <%= f.submit "Update", class: "submit-button w-full" %>
      </div>
    <% end %>
    <div class="action-bar">
      <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure? This cannot be undone.", turbo_confirm: "Are you sure? This cannot be undone." }, method: :delete, class: "bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded-md shadow-sm transition" %>
    </div>
  </div>
</div>
