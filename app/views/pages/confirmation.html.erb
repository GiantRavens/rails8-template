<% page_title "Confirm Your Account" %>
<% meta_description "Please confirm your email address to activate your #{app_name} account." %>

<div class="max-w-md mx-auto my-12 px-4 text-center">
  <div class="bg-white shadow-md rounded-lg p-8 border border-gray-200">
    <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-blue-100 text-blue-600 mb-4">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
      </svg>
    </div>
    
    <h1 class="text-2xl font-bold text-gray-800 mb-2">Check Your Email</h1>
    <p class="text-gray-600 mb-6">We've sent a confirmation link to your email address.</p>
    
    <div class="bg-gray-50 p-4 rounded-md mb-6 text-left">
      <h2 class="font-medium text-gray-900 mb-2">Next steps:</h2>
      <ol class="list-decimal list-inside text-gray-600 space-y-2">
        <li>Open the email from <%= app_name %></li>
        <li>Click the confirmation link in the email</li>
        <li>Once confirmed, you can sign in to your account</li>
      </ol>
    </div>
    
    <div class="border-t border-gray-200 pt-4 mt-4">
      <p class="text-sm text-gray-500 mb-4">Didn't receive the email? Check your spam folder or:</p>
      
      <div class="flex justify-center space-x-4">
        <%= link_to "Resend confirmation email", new_user_confirmation_path, class: "text-blue-600 hover:text-blue-800 font-medium text-sm" %>
        <span class="text-gray-300">|</span>
        <%= link_to "Return to sign in", new_user_session_path, class: "text-green-600 hover:text-green-700 font-medium text-sm" %>
      </div>
    </div>
  </div>
</div>
