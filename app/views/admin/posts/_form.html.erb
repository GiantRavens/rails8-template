<div class="form-container">
  <%= form_with(model: [:admin, post], class: "form-section") do |form| %>
    <div class="form-field-group">
      <h3 class="hd2-card">Post Information</h3>
      <p class="form-hint">This information will be displayed publicly on the blog.</p>
    </div>

    <div class="form-field-group">
      <%= form.label :title, class: "form-label" %>
      <%= form.text_field :title, 
          class: ["form-field", post.errors[:title].any? ? "form-field-error" : ""], 
          placeholder: "Post Title" %>
      <% if post.errors[:title].any? %>
        <p class="form-error"><%= post.errors[:title].first %></p>
      <% else %>
        <p class="form-hint">Give your post a clear, engaging title.</p>
      <% end %>
    </div>

    <div class="form-field-group">
      <%= form.label :body, class: "form-label" %>
      <%= form.text_area :body, 
          rows: 10, 
          class: ["form-field", post.errors[:body].any? ? "form-field-error" : ""], 
          placeholder: "Write post content here in Markdown..." %>
      <% if post.errors[:body].any? %>
        <p class="form-error"><%= post.errors[:body].first %></p>
      <% else %>
        <p class="form-hint">Write in Markdown format. You can use # for headers, **bold**, *italic*, [links](http://example.com), etc.</p>
      <% end %>
    </div>

    <div class="mb-6 bg-gray-100 p-4 rounded-md">
      <div class="flex items-center">
        <%= form.check_box :is_published, class: "h-4 w-4 rounded-sm border-gray-300 text-indigo-600 focus:ring-indigo-500 mr-2" %>
        <%= form.label :is_published, "Published", class: "form-label pt-2" %>
      </div>
      <p class="form-hint">Check this box to make the post publicly visible.</p>
    </div>

    <div class="form-field-group">
      <%= form.label :published_date, class: "form-label" %>
      <%= form.date_field :published_date, 
          class: ["form-field", post.errors[:published_date].any? ? "form-field-error" : ""] %>
      <p class="form-hint">Only relevant if the post is published.</p>
    </div>

    <div class="mt-8 flex justify-end space-x-3">
      <%= form.submit class: "submit-button w-full" %>
    </div>
  <% end %>
</div>
