<% page_title "Admin Edit Post - #{@post.title}" %>
<% meta_description "Administrator direct edit of the '#{@post.title}' post in the #{Rails.application.config.app_name} application." %>

<div class="mb-8 flex justify-between items-center">
  <div>
    <h1 class="hd1-hero">Admin Edit Post</h1>
    <p class="mt-2 text-sm text-gray-700">Update an existing blog post.</p>
  </div>
  <div class="flex space-x-3">
    <%= link_to "Back to Posts", admin_posts_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
</div>

<div class="bg-white shadow overflow-hidden sm:rounded-lg p-6">
  <%= render "form", post: @post %>
</div>
